<%= render 'layouts/header' %>

<h1>add ingredient</h1>

<%= form_for @ingredient do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name %>
  <%= f.label :description %>
  <%= f.text_field :description %>
  <%= f.label :vegetarian %>
  <%= f.select :vegetarian do %>
    <% [['carnivorous', 0], ['vegetarian', 1], ['vegan', 2]].each do |c| %>
      <%= content_tag(:option, c.first, value: c.last) %>
      <% end %>
  <% end %>
  <%= f.submit 'submit' %>
<% end %>
