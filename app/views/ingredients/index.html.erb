<%= render 'layouts/header' %>

<h1>
ingredients, yum.
</h1>



<h4>all the ingredients:</h4>
<ul>
  <% @ingredients.each do |ingredient| %>
  <li>
    <%= ingredient.name %>
  </li>
  <% end %>
  <li>
    <% if current_user.account == "admin" %>
    <%= link_to "add ingredient", new_ingredient_path %>
    <% end %>
  </li>
</ul>
