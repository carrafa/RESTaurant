<%= render 'layouts/header' %>

<h1>create new dish</h1>

<%= form_for @dish do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name %>
  <%= f.label :description %>
  <%= f.text_field :description %>
  <%= f.label :course %>
  <%= f.select :course do %>
    <% ['breakfast','lunch','dinner','sides'].each do |c| %>
      <%= content_tag(:option, c, value: c) %>
      <% end %>
    <% end %>
  <%= f.label :price %>
  <%= f.number_field :price %>
  <%= f.submit 'submit' %>
<% end %>
