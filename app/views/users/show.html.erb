<%= render 'layouts/header' %>

<h1>hi, <%= current_user.username %></h1>


<h3>here are your parties</h3>

<ul>
  <% current_user.parties.each do |party| %>
    <li>
      <%= link_to "Table " + party.name, party_path(party) %>
    </li>
  <% end %>
</ul>

<%= link_to "add party", new_user_party_path(current_user) %>


<div> here are your orders
</div>
<div>

  <% current_user.orders.each do |order| %>

    <li>
      bring a
      <%= order.dish.name %>
      to the person sitting in seat
      <%= order.seat %>
    </li>

  <% end %>

</div>
